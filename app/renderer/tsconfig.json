{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"sourceMap": false,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"strict": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"/@/*": ["./src/*"]
		},
		"lib": ["ESNext", "dom", "dom.iterable"]
	},

	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"types/**/*.d.ts",
		"../preload/exposeInMainWorld.d.ts"
	],
	"exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
